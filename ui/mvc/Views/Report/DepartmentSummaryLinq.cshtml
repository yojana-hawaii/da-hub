@model IEnumerable<mvc.ViewModel.DepartmentSummaryVM>

@{
    ViewData["Title"] = "DepartmentSummaryLinq";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DepartmentSummaryLinq</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeCount)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCount)
            </td>
        </tr>
}
    </tbody>
</table>
